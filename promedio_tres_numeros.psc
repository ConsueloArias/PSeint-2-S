Algoritmo promedio_tres_numeros
	Escribir "Ingrese numero 1";
	Leer num1;
	Escribir "Ingrese numero 2";
	Leer num2;
	Escribir "Ingrese numero 3";
	Leer num3;
	Escribir "El promedio de los numeros es: ", ((num1+num2+num3)/3);
	Escribir "La suma de los numeros es: ", (num1+num2+num3);
	Escribir "El doble del primer numero es: ", (num1*2);
	Escribir "El triple del segundo numero es: ", (num2*3);
	Escribir "El cuadrado del tercer numero es: ", (num3*num3);
FinAlgoritmo
